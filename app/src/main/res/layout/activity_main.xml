<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_code1"
                style="@style/textview_button"
                android:text="自定义 View 1-1 绘制基础" />

            <TextView
                android:id="@+id/tv_code2"
                style="@style/textview_button"
                android:text="自定义 View 1-2 Paint 详解" />

            <TextView
                android:id="@+id/tv_code3"
                style="@style/textview_button"
                android:text="自定义 View 1-3 drawText() 文字的绘制" />

            <TextView
                android:id="@+id/tv_code4"
                style="@style/textview_button"
                android:text="自定义 View 1-4 Canvas 对绘制的辅助 clipXXX() 和 Matrix" />

            <TextView
                android:id="@+id/tv_code5"
                style="@style/textview_button"
                android:text="自定义 View 1-5 绘制顺序" />

            <TextView
                android:id="@+id/tv_code6"
                style="@style/textview_button"
                android:text="自定义 View 1-6：属性动画 Property Animation（上手篇）" />

            <TextView
                android:id="@+id/tv_code7"
                style="@style/textview_button"
                android:text="自定义 View 1-7：属性动画 Property Animation（进阶篇）" />

            <TextView
                android:id="@+id/tv_code8"
                style="@style/textview_button"
                android:text="自定义 View 2-1：布局" />

<!--            <TextView-->
<!--                android:id="@+id/tv_code8_canvas_draw"-->
<!--                style="@style/textview_button"-->
<!--                android:text="8-2、canvas的绘图师" />-->

<!--            <TextView-->
<!--                android:id="@+id/tv_code8_canvas_text"-->
<!--                style="@style/textview_button"-->
<!--                android:text="8-3、canvas的书法家" />-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
